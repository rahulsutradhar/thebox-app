<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">

     <one.thebox.android.ViewHelper.MontserratTextView
        android:id="@+id/button_deliver_in_next_cycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/grey_borders"
        android:padding="12dp"
        android:text="Deliver in next cycle"
        android:textColor="@color/primary_text_color" />

     <one.thebox.android.ViewHelper.MontserratTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6dp"
        android:text="Will ve delivered on"
        android:textColor="@color/primary_text_color" />

     <one.thebox.android.ViewHelper.MontserratTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="7:30-9:00, 17 Feb, Sunday"
        android:textColor="@color/brilliant_rose" />

     <one.thebox.android.ViewHelper.MontserratTextView
        android:id="@+id/button_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:text="Cancel"
        android:textColor="@color/primary_text_color" />


</LinearLayout>