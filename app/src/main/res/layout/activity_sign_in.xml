<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


     <one.thebox.android.ViewHelper.MontserratTextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="113dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="Please enter your mobile no."
        android:textColor="@color/primary_text_color"
        android:textSize="14sp" />

     <one.thebox.android.ViewHelper.MontserratTextView
        android:id="@+id/button_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_text_mobile_number"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:background="@drawable/grey_borders"
        android:padding="16dp"
        android:text="Sign In"
        android:textColor="@color/primary_text_color"
        android:textSize="16sp" />

    <one.thebox.android.ViewHelper.MontserratEditText
        android:id="@+id/edit_text_mobile_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_alignEnd="@+id/textView6"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_below="@+id/textView6"
        android:background="@drawable/black_underline_edit_text"
        android:gravity="center_horizontal"
        android:inputType="number"
        android:maxLength="10"
        android:padding="16dp"
        android:textColor="@color/primary_text_color"
        />

</RelativeLayout>