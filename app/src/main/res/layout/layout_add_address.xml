<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <one.thebox.android.ViewHelper.MontserratTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/enter_details"
                android:textColor="@color/primary_text_color"
                android:paddingTop="4dp"
                android:textSize="20sp" />

            <one.thebox.android.ViewHelper.MontserratTextView
                android:id="@+id/button_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/grey_borders"
                android:paddingBottom="4dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingTop="4dp"
                android:text="Done"
                android:textColor="@color/md_green_800"
                android:textSize="14sp" />

        </RelativeLayout>



        <RadioGroup
            android:id="@+id/radio_group_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:checkedButton="@+id/home_radio_buttom"
            android:orientation="horizontal">

            <one.thebox.android.ViewHelper.MontserratRadioButton
                android:id="@+id/home_radio_buttom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:buttonTint="@color/primary_text_color"
                android:text="Home"
                android:textColor="@color/primary_text_color" />

            <one.thebox.android.ViewHelper.MontserratRadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:buttonTint="@color/primary_text_color"
                android:text="Office"
                android:textColor="@color/primary_text_color" />

            <one.thebox.android.ViewHelper.MontserratRadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/primary_text_color"
                android:text="Other"
                android:textColor="@color/primary_text_color" />
        </RadioGroup>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColorHint="@color/dim_gray">

            <one.thebox.android.ViewHelper.MontserratEditText
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:inputType="textCapSentences"
                android:id="@+id/flat_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/green_underline_edit_text"
                android:hint="Flat/House/Office"
                android:padding="8dp"
                android:textSize="@dimen/text_small3"
                android:textColor="@color/primary_text_color" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/dim_gray"
            android:layout_marginTop="8dp">

            <one.thebox.android.ViewHelper.MontserratEditText
                android:id="@+id/street_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/green_underline_edit_text"
                android:hint="Street/Office Name"
                android:textColorHint="@color/md_grey_50"
                android:inputType="textCapSentences"
                android:padding="8dp"
                android:textSize="@dimen/text_small3"
                android:textColor="@color/primary_text_color" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/dim_gray"
            android:layout_marginTop="8dp">

            <one.thebox.android.ViewHelper.MontserratEditText
                android:id="@+id/society_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/green_underline_edit_text"
                android:hint="Society"
                android:inputType="textCapSentences"
                android:padding="8dp"
                android:textSize="@dimen/text_small3"
                android:textColor="@color/primary_text_color" />
        </android.support.design.widget.TextInputLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/progress_bar"
                android:src="@drawable/loader"
                style="?android:attr/android:progressBarStyleSmall"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="right|bottom"

                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:padding="8dp" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/locality_text_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:textColorHint="@color/dim_gray">

                <AutoCompleteTextView
                    android:id="@+id/edit_text_locality"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/green_underline_edit_text"
                    android:hint="Locality"
                    android:inputType="textCapSentences"
                    android:padding="8dp"
                    android:textColor="@color/primary_text_color"
                    android:textSize="@dimen/text_small3"
                    android:textColorHint="@color/primary_text_color" />
            </android.support.design.widget.TextInputLayout>


        </FrameLayout>

        <CheckBox
            android:id="@+id/check_box_primary_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:buttonTint="@color/primary_text_color"
            android:checked="true"
            android:text="Make as primary address"
            android:textSize="@dimen/text_small3"
            android:textColor="@color/primary_text_color" />

    </LinearLayout>
</ScrollView>