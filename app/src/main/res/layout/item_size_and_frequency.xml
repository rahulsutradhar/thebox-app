<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/size_text_view"
                style="@style/AppTheme.Widget.Avenir.Next.Ltpro.Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:text="55 ml - Tube"
                android:textColor="@color/md_grey_600"
                android:textSize="@dimen/text_small3" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cost_text_view"
                    style="@style/AppTheme.Widget.Avenir.Next.Ltpro.Regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="52 Rs"
                    android:textColor="@color/md_grey_600"
                    android:textSize="@dimen/text_small3" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/mrp_text_view"
                        style="@style/AppTheme.Widget.Avenir.Next.Ltpro.Regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/strike_through"
                        android:gravity="left"
                        android:text="52 Rs"
                        android:textColor="@color/md_grey_600"
                        android:textSize="@dimen/text_small1" />
                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/text_view_savings"
                style="@style/AppTheme.Widget.Avenir.Next.Ltpro.Regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_view_category_name"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:gravity="center_horizontal"
                android:text=""
                android:textColor="@color/raspberry_red"
                android:textSize="@dimen/text_small1"
                android:visibility="visible" />


        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/md_grey_300" />

</LinearLayout>