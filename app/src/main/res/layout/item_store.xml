<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp">

        <RelativeLayout
            android:layout_width="48dp"
            android:layout_height="48dp">

            <ImageView
                android:id="@+id/box_image_view"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:scaleType="fitXY" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_horizontal_between_co_element"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title"
                        style="@style/AppTheme.Widget.Avenir.Next.Ltpro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="The Hygeine Box"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_medium1" />

                    <!-- Savings -->
                    <TextView
                        android:id="@+id/text_view_savings"
                        style="@style/AppTheme.Widget.Avenir.Next.Ltpro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:paddingBottom="2dp"
                        android:paddingRight="10dp"
                        android:text="Save â‚¹ 10"
                        android:textColor="@color/raspberry_red"
                        android:textSize="@dimen/text_small1"
                        android:visibility="visible" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_weight="2.8">

                    <TextView
                        android:id="@+id/add_more_items"
                        style="@style/AppTheme.Widget.Avenir.Next.Ltpro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:background="@drawable/green_borders"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="@string/add_more_items"
                        android:textColor="@color/md_black_1000"
                        android:textSize="@dimen/text_small1" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="4dp"
            android:background="@color/brilliant_rose" />


    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/relatedCategories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="4dp"
        android:paddingRight="4dp" />


</LinearLayout>

