<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:paddingBottom="40dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="40dp"
        tools:context="one.thebox.android.activity.LoginActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0.7"
            android:gravity="center"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/name_text_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:textColorHint="@color/dim_gray">

                <one.thebox.android.ViewHelper.MontserratEditText
                    android:id="@+id/edit_text_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/black_underline_edit_text"
                    android:hint="Name"
                    android:inputType="text"
                    android:padding="8dp"
                    android:textColor="@color/primary_text_color"
                    android:textColorHint="@color/primary_text_color" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/dob_text_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:textColorHint="@color/dim_gray">

                <one.thebox.android.ViewHelper.MontserratEditText
                    android:id="@+id/edit_text_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/black_underline_edit_text"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:padding="8dp"
                    android:textColor="@color/primary_text_color"
                    android:textColorHint="@color/primary_text_color" />
            </android.support.design.widget.TextInputLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/progress_bar"
                    style="?android:attr/android:progressBarStyleSmall"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="right|bottom"
                    android:layout_marginBottom="22dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/loader" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/locality_text_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:textColorHint="@color/dim_gray">

                        <AutoCompleteTextView
                            android:id="@+id/edit_text_locality"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/black_underline_edit_text"
                            android:hint="Locality"
                            android:inputType="text"
                            android:padding="8dp"
                            android:textColor="@color/primary_text_color"
                            android:textColorHint="@color/primary_text_color" />
                    </android.support.design.widget.TextInputLayout>

                    <one.thebox.android.ViewHelper.MontserratTextView
                        android:id="@+id/only_operational_in_powai"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginBottom="@dimen/margin_vertical_between_non_co_element"
                        android:text="@string/only_operational_in_powai"
                        android:textColor="@color/md_amber_800"
                        />

                </LinearLayout>




            </FrameLayout>
        </LinearLayout>

        <one.thebox.android.ViewHelper.MontserratButton
            android:id="@+id/button_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_vertical_between_non_co_element"
            android:layout_centerInParent="true"
            android:layout_gravity="center|bottom"
            android:background="@drawable/grey_borders"
            android:padding="16dp"
            android:text="Submit"
            android:textColor="@color/md_green_500" />

    </LinearLayout>

</ScrollView>
