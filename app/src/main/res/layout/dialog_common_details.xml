<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_corner_dailog"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/header_title"
            style="@style/AppTheme.Widget.Avenir.Next.Ltpro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Delivery Zone"
            android:textColor="@color/davy_grey"
            android:textSize="@dimen/text_medium2" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:scrollbars="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp">

                <TextView
                    android:id="@+id/text_content"
                    style="@style/AppTheme.Widget.Avenir.Next.Ltpro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:lineSpacingExtra="2dp"
                    android:textColor="@color/warm_grey"
                    android:textSize="@dimen/text_small3" />

            </RelativeLayout>
        </ScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/holder_okay_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingBottom="6dp"
                android:paddingLeft="28dp"
                android:paddingRight="16dp"
                android:paddingTop="6dp">

                <one.thebox.android.ViewHelper.MontserratTextView
                    android:id="@+id/okay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:text="OK"
                    android:textColor="@color/md_green_500"
                    android:textSize="@dimen/text_medium1"
                    android:textStyle="bold"
                    app:typeface="montserratSemiBold" />

            </RelativeLayout>


        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>