<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/md_grey_200">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/ripple"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="6dp"
        card_view:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Savings details -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp">

                <!--Monthly bill -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/monthly_bill_text"
                            style="@style/AppTheme.Widget.Avenir.Next.Ltpro"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:padding="5dp"
                            android:text="Billing"
                            android:textColor="@color/dark_grey"
                            android:textSize="@dimen/text_extra_small4" />

                        <View
                            android:layout_width="45dp"
                            android:layout_height="1dp"
                            android:layout_marginLeft="5dp"
                            android:background="@color/md_grey_500" />

                        <TextView
                            android:id="@+id/monthly_bill_value"
                            style="@style/AppTheme.Widget.Avenir.Next.Ltpro"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="--"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_medium4" />
                    </LinearLayout>


                </RelativeLayout>

                <!--Total Monthly bill -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/total_monthly_savings_text"
                            style="@style/AppTheme.Widget.Avenir.Next.Ltpro"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:padding="5dp"
                            android:text="--"
                            android:textColor="@color/raspberry_red"
                            android:textSize="@dimen/text_extra_small4" />

                        <View
                            android:layout_width="45dp"
                            android:layout_height="1dp"
                            android:layout_marginLeft="5dp"
                            android:background="@color/raspberry_red" />

                        <TextView
                            android:id="@+id/total_monthly_savings_value"
                            style="@style/AppTheme.Widget.Avenir.Next.Ltpro"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="--"
                            android:textColor="@color/raspberry_red"
                            android:textSize="@dimen/text_medium4" />
                    </LinearLayout>

                </RelativeLayout>

                <!--Total Items -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/total_items_text"
                            style="@style/AppTheme.Widget.Avenir.Next.Ltpro"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:padding="5dp"
                            android:text="--"
                            android:textColor="@color/dark_grey"
                            android:textSize="@dimen/text_extra_small4" />

                        <View
                            android:layout_width="45dp"
                            android:layout_height="1dp"
                            android:layout_marginLeft="5dp"
                            android:background="@color/md_grey_500" />

                        <TextView
                            android:id="@+id/total_items_value"
                            style="@style/AppTheme.Widget.Avenir.Next.Ltpro"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="--"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_medium4" />

                    </LinearLayout>


                </RelativeLayout>

            </LinearLayout>

            <!-- Subscription details -->
            <RelativeLayout
                android:id="@+id/subscribe_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/md_green_500"
                android:padding="5dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/subscription_box_title"
                        style="@style/AppTheme.Widget.Avenir.Next.Ltpro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:maxLines="1"
                        android:text="Subscribe to The daily Box next"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_small1" />

                    <TextView
                        android:id="@+id/subscription_box_description"
                        style="@style/AppTheme.Widget.Avenir.Next.Ltpro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:maxLines="1"
                        android:padding="2dp"
                        android:text="save upto Rs. 400 per month"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_extra_small2" />


                </LinearLayout>

            </RelativeLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>