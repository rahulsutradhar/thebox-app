<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="16dp">

    <one.thebox.android.ViewHelper.MontserratRadioButton
        android:id="@+id/radio_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/primary_text_color"
        android:checked="false" />

    <LinearLayout
        android:id="@+id/holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


             <one.thebox.android.ViewHelper.MontserratTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arriving on: "
                android:textColor="@color/primary_text_color"
                android:textSize="@dimen/text_medium1" />

             <one.thebox.android.ViewHelper.MontserratTextView
                android:id="@+id/text_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sun 14 Feb"
                android:textColor="@color/primary_text_color"
                android:textSize="@dimen/text_medium1" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           >

             <one.thebox.android.ViewHelper.MontserratTextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time slot: "
                android:textColor="@color/primary_text_color"
                android:textSize="@dimen/text_small1" />

             <one.thebox.android.ViewHelper.MontserratTextView
                android:id="@+id/time_slot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:00 A.M - 11:30 A.M"
                android:textColor="@color/primary_text_color"
                android:textSize="@dimen/text_small1" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>