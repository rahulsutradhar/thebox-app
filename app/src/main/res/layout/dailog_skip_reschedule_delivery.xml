<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_corner_dailog"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">


        <TextView
            android:id="@+id/header_title"
            style="@style/AppTheme.Widget.Avenir.Next.Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Skip Delivery"
            android:textColor="@color/raspberry_red"
            android:textSize="@dimen/text_medium1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:padding="8dp">

            <TextView
                android:id="@+id/text_description"
                style="@style/AppTheme.Widget.Avenir.Next.Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:lineSpacingExtra="2dp"
                android:text="Item delivery will skip once, However  will continue your subscription"
                android:textColor="@color/black"
                android:textSize="@dimen/text_small1"
                android:textStyle="normal" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/cancel"
                    style="@style/AppTheme.Widget.Avenir.Next.Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:paddingRight="10dp"
                    android:text="Cancel"
                    android:textColor="@color/md_grey_600"
                    android:textSize="@dimen/text_small3" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="8dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:id="@+id/holder_skip_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/green_background"
                    android:paddingBottom="6dp"
                    android:paddingLeft="28dp"
                    android:paddingRight="28dp"
                    android:paddingTop="6dp">

                    <one.thebox.android.ViewHelper.MontserratTextView
                        android:id="@+id/skip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="0dp"
                        android:text="@string/skip"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_medium1"
                        android:textStyle="bold"
                        app:typeface="montserratSemiBold" />

                </RelativeLayout>

            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>