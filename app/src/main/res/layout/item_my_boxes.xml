<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp">

        <one.thebox.android.ViewHelper.MontserratTextView
            android:id="@+id/add_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_below="@+id/title"
            android:text="Click to add more"
            android:textColor="@color/secondary_text_color"
            android:textSize="@dimen/text_small1"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="8dp"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:id="@+id/linearLayout3">


            <TextView
                android:id="@+id/view_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:gravity="center_horizontal"
                android:text="View My Items"
                android:textColor="@color/md_green_500"
                android:textSize="@dimen/text_medium2" />

            <TextView
                android:id="@+id/no_of_item_subscribed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:lines="1"
                android:text="5 items sub"
                android:textColor="@color/secondary_text_color"
                android:textSize="@dimen/text_small1" />


        </LinearLayout>

        <one.thebox.android.ViewHelper.MontserratTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hygeine Box"
            android:textColor="@color/primary_text_color"
            android:textSize="@dimen/text_medium2"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />



    </RelativeLayout>

    <ImageView
        android:id="@+id/box_image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:visibility="gone" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="4dp"
            android:background="@color/brilliant_rose" />

        <one.thebox.android.ViewHelper.MontserratTextView
            android:id="@+id/saving_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Savings upto 800 per month waiting for you"
            android:textColor="@color/brilliant_rose" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/expanded_list_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <one.thebox.android.ViewHelper.MontserratTextView
        android:id="@+id/sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:maxLines="2"
        android:text="sub_title"
        android:textColor="@color/secondary_text_color"
        android:textSize="@dimen/text_small2" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/relatedCategories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="4dp"
        android:paddingRight="4dp" />


</LinearLayout>

