<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/md_grey_200"
    android:orientation="vertical">


    <TextView
        android:id="@+id/title"
        style="@style/AppTheme.Widget.Avenir.Next.Ltpro.Bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_grey_200"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/margin_from_bottom_of_card"
        android:paddingTop="@dimen/margin_from_top_of_card"
        android:text="Hygeine Box"
        android:textColor="@color/black"
        android:textSize="@dimen/text_medium2" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/useritem_list_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</LinearLayout>

