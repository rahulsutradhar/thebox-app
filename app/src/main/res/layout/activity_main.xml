<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:fitsSystemWindows="true"
    android:focusableInTouchMode="true">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_gravity="top"
                android:background="@color/primary"
                android:backgroundTint="@color/primary"
                android:gravity="center_vertical"
                app:layout_scrollFlags="scroll|enterAlways">

                <ImageView
                    android:id="@+id/button_special_action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:padding="16dp"
                    android:src="@drawable/ic_edit"
                    android:visibility="gone" />


            </android.support.v7.widget.Toolbar>

            <FrameLayout
                android:id="@+id/search_view_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"

                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/search_view_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_view_search_action"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:src="@drawable/menu_icon" />


                    <one.thebox.android.ViewHelper.MontserratEditText
                        android:id="@+id/search"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:background="@color/white"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="center_vertical"
                        android:hint="Search and Add"
                        android:imeOptions="actionSearch"
                        android:inputType="text"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="10dp"
                        android:textColor="@color/primary_text_color"
                        android:textColorHint="@color/manatee" />

                </LinearLayout>

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/progress_bar"
                    style="?android:attr/android:progressBarStyleSmall"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginEnd="12dp"
                    android:layout_marginRight="12dp"
                    android:gravity="center"
                    android:src="@drawable/loader" />


            </FrameLayout>

            <LinearLayout
                android:id="@+id/explore_and_deliveries"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="10">

                <TextView
                    android:id="@+id/explore"
                    android:layout_weight="5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_vertical_margin_small"
                    android:layout_marginBottom="@dimen/activity_vertical_margin_small"
                    android:gravity="center_vertical"
                    android:paddingBottom="4dp"
                    android:drawableLeft="@drawable/explore"
                    android:drawablePadding="@dimen/activity_horizontal_margin_medium"
                    android:textSize="@dimen/text_medium2"
                    android:text="@string/explore" />

                <TextView
                    android:id="@+id/calendar"
                    android:layout_weight="5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_vertical_margin_small"
                    android:layout_marginBottom="@dimen/activity_vertical_margin_small"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/calendar"
                    android:drawablePadding="@dimen/activity_horizontal_margin_medium"
                    android:textSize="@dimen/text_medium2"
                    android:text="@string/calendar" />



                </LinearLayout>

        </android.support.design.widget.AppBarLayout>

        <FrameLayout
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

        </FrameLayout>

    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        app:headerLayout="@layout/drawer_header"
        app:itemTextAppearance="@style/NavigationDrawerStyle"
        app:itemTextColor="@color/primary_text_color"
        app:menu="@menu/drawer">


    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
