<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="16dp">

    <one.thebox.android.ViewHelper.MontserratTextView
        android:id="@+id/arriving_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/sample_text_arriving_in_x_days"
        android:textSize="@dimen/text_medium2"
        android:textColor="@color/black" />

    <one.thebox.android.ViewHelper.MontserratTextView
        android:id="@+id/delivery_schedule_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Repeats every week"
        android:textSize="@dimen/text_medium1"
        android:textColor="@color/light_grey" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="@color/manatee" />

</LinearLayout>