<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="73dp"
        android:gravity="center_horizontal"
        android:text="Start Today"
        android:textColor="@color/dim_gray"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="or"
        android:textColor="@color/dim_gray"
        android:textSize="18sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="8dp"
        android:layout_toLeftOf="@+id/textView3"
        android:background="@drawable/grey_borders"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:text="Create account"
        android:textColor="@color/dim_gray"
        android:textSize="18sp"
        android:id="@+id/create_account" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView3"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="8dp"
        android:layout_toRightOf="@+id/textView3"
        android:background="@drawable/grey_borders"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:text="Sign In"
        android:textColor="@color/dim_gray"
        android:textSize="18sp"
        android:id="@+id/sign_in" />

    <TextView
        android:id="@+id/facebook_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:background="@color/cornflower_blue"
        android:padding="16dp"
        android:text="Connect with Facebook"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/google_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/facebook_button"
        android:layout_alignLeft="@+id/facebook_button"
        android:layout_alignRight="@+id/facebook_button"
        android:layout_alignStart="@+id/facebook_button"
        android:layout_below="@+id/facebook_button"
        android:layout_marginTop="30dp"
        android:background="@color/red_orange"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:text="Connect with Google"
        android:textAppearance="?android:attr/textAppearanceMedium" />


</RelativeLayout>