<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
        <item name="md_dark_theme">false</item>
        <item name="md_title_color">@color/brilliant_rose</item>
        <item name="md_positive_color">@color/brilliant_rose</item>
        <item name="md_negative_color">@color/primary_text_color</item>
        <item name="md_content_color">@color/primary_text_color</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="md_medium_font">Montserrat-Regular.otf</item>
        <item name="md_regular_font">Montserrat-Regular.otf</item>
        <item name="android:listDivider">@color/light_white</item>
    </style>

    <style name="DialogTheme" parent="android:Theme.Dialog">

        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>


        <!-- No backgrounds, titles or window float -->
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="AnnouncementTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="colorAccent">@color/md_red_800</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="AppTheme.NoAnimation" parent="AppTheme">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/light_grey</item>
        <item name="colorControlActivated">@color/primary_text_color</item>
        <item name="colorControlHighlight">@color/primary_text_color</item>
    </style>

    <style name="AppTheme.Green" parent="AppTheme">
        <item name="colorPrimary">@color/manatee</item>
        <item name="colorPrimaryDark">@color/manatee</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="MyAnimation.Window" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/abc_slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/abc_slide_out_bottom</item>
    </style>

    <style name="SearchViewTheme">
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>


    <style name="MyLaunchActivityTheme" parent="AppTheme">

        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="CustomShowcaseTheme3" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#88000000</item>
        <item name="sv_showcaseColor">#00000000</item>
        <item name="sv_buttonText">Got it</item>

    </style>

    <style name="CustomTitle" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">#00801A</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:typeface">monospace</item>

    </style>

    <style name="tv_title_app_update">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>

    <style name="tv_subtext_app_update" parent="tv_title_app_update"></style>

    <style name="toolbar">
        <item name="android:id">@id/toolbar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/primary</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <item name="toolbar" type="id"></item>
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_gravity="center"-->

    <style name="AppTheme.Button.BaseButtonStyle" parent="Widget.AppCompat.Button">
        <item name="fontPath">fonts/Montserrat-Bold.ttf</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Button.PrimaryButtonTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="fontPath">fonts/Montserrat-Bold.ttf</item>
        <item name="android:textStyle">bold</item>
        <item name="colorButtonNormal">@color/primary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="popupTheme">@style/AppTheme.PopupOverlay</item>
        <item name="titleTextAppearance">@style/AppTheme.Toolbar.TitleText</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="titleTextAppearance">@style/AppTheme.Toolbar.TitleText</item>
    </style>

    <style name="AppTheme.Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="fontPath">fonts/Montserrat-Bold.ttf</item>
    </style>

    <style name="AppTheme.Button.PrimaryButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="fontPath">fonts/Montserrat-Regular.otf</item>
        <item name="colorButtonNormal">@color/primary</item>
        <item name="colorAccent">@color/primary</item>
    </style>

    <style name="AppTheme.Widget.TextView" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/AvenirLTStd-Roman.otf</item>
    </style>

    <style name="AppTheme.Widget.TextView.Avenir.Book" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/AvenirLTStd-Book.otf</item>
    </style>

    <style name="AppTheme.Widget.TextView.Avenir.Light" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/AvenirLTStd-Light.otf</item>
    </style>

    <style name="AppTheme.Widget.Montserrat.Regular" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/Montserrat-Regular.otf</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Widget.Avenir.Next.Ltpro.Bold" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/AvenirNextLTPro-Bold.otf</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.Widget.Avenir.Next.Medium" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/avenir_next_medium.ttf</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.Widget.Avenir.Next.Ltpro" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/AvenirNextLTPro-lt.otf</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.Widget.Avenir.Next.Ltpro.Regular" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/AvenirNextLTPro-Regular.otf</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.Widget.Avenir.Heavy" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/avenir-heavy.ttf</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.Widget.Avenir.Next.Regular" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/avenir-next-regular.ttf</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DefaultTextInputLayout" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:labelTextSize">12sp</item>
        <item name="android:textColorHint">@color/dark_grey_30_opacity</item>
        <item name="android:keyTextSize">10sp</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="fontPath">fonts/AvenirLTStd-Roman.otf</item>
    </style>

</resources>
